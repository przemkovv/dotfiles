# http://bugs.i3wm.org/report/ticket/661


set $mode_system System (d) dim, (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym d exec --no-startup-id ~/bin/i3exit dim, mode "default"
    bindsym l exec --no-startup-id ~/bin/i3exit lock, mode "default"
    bindsym e exec --no-startup-id ~/bin/i3exit logout, mode "default"
    bindsym s exec --no-startup-id ~/bin/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id ~/bin/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id ~/bin/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id ~/bin/i3exit shutdown, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Mod1+Escape mode "$mode_system"

bindsym $mod+m move workspace to output left

set $SINK alsa_output.pci-0000_00_1b.0.analog-stereo
bindsym $mod+F1 exec "pactl set-sink-mute $SINK toggle"
bindsym $mod+F2 exec "pactl set-sink-volume $SINK -1%"
bindsym $mod+F3 exec "pactl set-sink-volume $SINK +1%"

bindsym XF86AudioRaiseVolume exec  pactl set-sink-volume $SINK +1%  && pkill -SIGUSR1 -f "python /home/przemkovv/.i3/status.py"
bindsym XF86AudioLowerVolume exec  pactl set-sink-volume $SINK -1% && pkill -SIGUSR1 -f "python /home/przemkovv/.i3/status.py"

bindsym XF86AudioMute exec  pactl set-sink-mute $SINK toggle && pkill -SIGUSR1 -f "python /home/przemkovv/.i3/status.py"


